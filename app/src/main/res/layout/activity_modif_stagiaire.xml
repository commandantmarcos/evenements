<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifStagiaireActivity">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ModifStagiaireActivity">

    <TextView
        android:id="@+id/modifStagiaireTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:textSize="28sp"
        android:text="@string/modifStagiaireTitre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/modifStagiaireLabelNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:textSize="20sp"
        android:text="@string/detailsStagiaireLabelNom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireTitle" />

    <TextView
        android:id="@+id/modifStagiaireLabelPrenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/detailsStagiaireLabelPrenom"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireLabelNom" />

    <TextView
        android:id="@+id/modifStagiaireLabelAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:text="@string/detailsStagiaireLabelAge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireLabelPrenom" />

    <TextView
        android:id="@+id/modifStagiaireLabelMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:text="@string/detailsStagiaireLabelMail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireLabelAge" />

    <TextView
        android:id="@+id/modifStagiaireLabelTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:text="@string/detailsStagiaireLabelTel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireLabelMail" />

    <TextView
        android:id="@+id/modifStagiaireLabelImage"
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/detailsStagiaireLabelImage"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireLabelTel" />

    <TextView
        android:id="@+id/modifStagiaireLabelSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:labelFor="@+id/modifStagiaireSession"
        android:text="@string/detailsStagiaireLabelSession"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireLabelImage" />

    <TextView
        android:id="@+id/modifStagiaireLabelFormation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:textSize="20sp"
        android:labelFor="@+id/modifStagiaireFormation"
        android:text="@string/detailsStagiaireLabelFormation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireLabelSession" />

    <EditText
        android:id="@+id/modifStagiaireNom"
        android:layout_width="233dp"
        android:layout_height="45dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/modifStagiaireLabelNom"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireTitle" />

    <EditText
        android:id="@+id/modifStagiairePrenom"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/modifStagiaireLabelPrenom"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireNom" />

    <EditText
        android:id="@+id/modifStagiaireAge"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/modifStagiaireLabelAge"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiairePrenom" />

    <EditText
        android:id="@+id/modifStagiaireMail"
        android:layout_width="233dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="6dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/modifStagiaireLabelMail"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireAge" />

    <EditText
        android:id="@+id/modifStagiaireTel"
        android:layout_width="233sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/modifStagiaireLabelTel"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireMail" />

    <EditText
        android:id="@+id/modifStagiaireImage"
        android:layout_width="233sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textUri"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/modifStagiaireLabelImage"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireTel" />

    <Button
        android:id="@+id/modifStagiaireValidation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:onClick="onValidationClicked"
        android:text="@string/modifStagiaireValidation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireFormation" />

    <EditText
        android:id="@+id/modifStagiaireSession"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/modifStagiaireLabelSession"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireImage" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/modifStagiaireFormation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toEndOf="@+id/modifStagiaireLabelFormation"
        app:layout_constraintTop_toBottomOf="@+id/modifStagiaireSession" />
</android.support.constraint.ConstraintLayout>
</ScrollView>